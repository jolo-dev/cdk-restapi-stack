{
  "name": "lambdas",
  "version": "0.0.1",
  "description": "This is a package for Lambdas written in Typescript",
  "scripts": {
    "test": "jest --silent",
    "test:watch": "jest --watch",
    "test:integration": "jest -- test/local.integration.test.ts",
    "build": "esbuild ./src/**/**.ts --bundle --minify --platform=node --target=node14.7 --outdir=./dist",
    "watch": "cdklocal watch & esbuild ./src/**/**.ts --bundle --minify --platform=node --target=node14.7 --outdir=./dist --watch",
    "local:bootstrap": "cdklocal bootstrap",
    "local:deploy": "cdklocal deploy --all --require-approval never",
    "dev": "docker-compose up -d && pnpm local:bootstrap && pnpm local:deploy && pnpm watch",
    "eslint": "eslint . --fix --ext .ts",
    "local": "cdklocal"
  },
  "author": "John Nguyen <john@globaldatanet.com>",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.43.0",
    "aws-lambda": "^1.0.7"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.85",
    "aws-cdk-local": "^1.65.8"
  }
}