{
  "name": "lambdas",
  "version": "0.0.1",
  "description": "This is a package for Lambdas written in Typescript",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "esbuild ./src/**/**.ts --bundle --minify --platform=node --target=node14.7 --outdir=./build",
    "watch": "cdklocal watch LocalStack & esbuild ./src/**/**.ts --bundle --minify --platform=node --target=node14.7 --outdir=./dist --watch",
    "dev": "docker-compose up -d && ./init_db.sh && pnpm watch",
    "lint": "eslint . --fix --ext .ts",
    "local": "cdklocal"
  },
  "author": "John Nguyen <john@globaldatanet.com>",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.43.0",
    "aws-lambda": "^1.0.7"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.85",
    "aws-cdk-local": "^1.65.8"
  }
}
